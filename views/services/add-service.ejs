<%- include('../partials/header') %>
    <%- include('../partials/nav') %>
        <section class="">
            <div class="row">
                <div class="col-lg-12 col-12">
                    <a href="/services" class="unstyled font-14 mb-3 d-block"><- Back to all services</a>
                    <h3 class="mb-1">Create a service</h3>
                    <p class="support-text">Pricing, capacity, and descriptions of the service you're selling.</p>
                </div>
            </div>
        </section>

        <section>
            <form action="/services/add-service" method="POST" enctype="multipart/form-data">
                <!-- Service Name -->
                <div class="form-row row border-top">
                    <div class="col-lg-4 col-12">
                        <label class="form-label" for="name">Service name</label>
                    </div>
                    <div class="col-lg-8 col-12">
                        <input class="form-control" type="text" id="name" name="name" required>
                    </div>
                </div>

                <!-- Description -->
                <div class="form-row row">
                    <div class="col-lg-4 col-12">
                        <label class="form-label" for="description">Description</label>
                    </div>
                    <div class="col-lg-8 col-12">
                        <textarea id="description" class="form-control" name="description" rows="3" required></textarea>
                    </div>
                </div>


                <!-- Service image -->
                <div class="form-row row">
                    <div class="col-lg-4 col-12">
                        <label for="service_image" class="form-label mb-0">Serivce image (optional)</label>
                        
                    </div>
                    <div class="col-lg-8 col-12">
                        <input type="file" id="service_image" class="form-control" name="service_image">
                    </div>
                </div>


                <!-- Max Capacity -->
                <div class="form-row row">
                    <div class="col-lg-4 col-12">
                        <label for="max_capacity" class="form-label mb-0">Max capacity</label>
                        <p class="support-text font-14">Capacity per booking.</p>
                    </div>
                    <div class="col-lg-8 col-12">
                        <input type="number" id="max_capacity" class="form-control" name="max_capacity" required>
                    </div>
                </div>

              <!-- Duration -->
                <div class="form-row row">
                    <div class="col-lg-4 col-12">
                        <label for="session_duration" class="form-label mb-0">Service duration</label>
                        <p class="support-text font-14">How long should the booking time slots be? e.g. 1hr, 2hr, 3hr. </p>
                    </div>
                    <div class="col-lg-8 col-12">
                        <input type="time" id="session_duration" class="form-control" name="session_duration" required>
                    </div>
                </div>

                <!-- Price -->
                <div class="form-row row">
                    <div class="col-lg-4 col-12">
                        <label for="price" class="form-label mb-0">Price</label>
                        <p class="support-text font-14">Price per time slot.</p>
                    </div>
                    <div class="col-lg-8 col-12">
                        <div class="input-group">
                            <span class="input-group-text">Â£</span>
                            <input type="number" id="price" step="0.01" name="price" class="form-control"
                                aria-label="Amount (to the nearest pound)" required>
                        </div>
                    </div>
                </div>


                <div class="col-12 mt-3">
                    <h4 class="mb-1">Opening hours</h4>
                    <p class="support-text font-14">Choose hours or marked days as closed</p>
                </div>
                <div class="row mb-3 align-items-start form-row">
                    <% ["Monday", "Tuesday" , "Wednesday" , "Thursday" , "Friday" , "Saturday" , "Sunday"].forEach((day, index)=> { %>
                        <div class="col-lg col-sm-12 mb-3">
                            
                            <label class="form-label">
                                <%= day %>
                            </label>

                            <!-- Service Enabled Checkbox -->
                            <div class="form-check form-switch mb-2">
                                <label class="form-label" for="day-<%= index %>-closed"></label>
                                <input class="form-check-input" type="checkbox" id="day-<%= index %>-closed"
                                    name="service_hours[<%= index %>][is_closed]" value="false"
                                    onchange="toggleTimes(this, 'times-<%= index %>')">
                            </div>

                            <!-- Opening and Closing Times (Initially Hidden) -->
                            <div class="collapse row mt-4" id="times-<%= index %>">
                                <!-- Opening Time -->
                                <div class="mb-2 col-6 col-lg-12">
                                    <label class="form-label support-text" for="day-<%= index %>-open">Opening
                                        Time</label>
                                    <input type="time" class="form-control" id="day-<%= index %>-open"
                                        name="service_hours[<%= index %>][opening_time]">
                                </div>

                                <!-- Closing Time -->
                                <div class="mb-2 col-6 col-lg-12">
                                    <label class="form-label support-text " for="day-<%= index %>-close">Closing
                                        Time</label>
                                    <input type="time" class="form-control" id="day-<%= index %>-close"
                                        name="service_hours[<%= index %>][closing_time]">
                                </div>
                            </div>

                            <!-- Hidden input for Day of Week -->
                            <input type="hidden" name="service_hours[<%= index %>][day_of_week]" value="<%= day %>">
                        </div>
                        <% }); %>
                </div>

                <div class="form-row row">
                    <div class="col-8 mb-4">
                        <h4 class="mb-0">Add ons</h4>
                        <p class="support-text font-14">Additional booking options for your service</p>
                    </div>
                    <div class="col-4 d-flex justify-content-end align-items-start">
                        <button type="button" id="addAddonButton">+ Add-on</button>
                    </div>
                </div>
                <div id="serviceAddOns">

                </div>


                <div class="form-row row border-top">
                    <div class="col-lg-12 col-12">
                        <label for="enabled" class="form-check-label form-label">Enable service</label>
                    </div>
                    <div class="col-lg-12 col-12">
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" name="enabled" role="switch" id="enabled">
                        </div>
                    </div>
                </div>
                <div class="form-row row">
                    <div class="col-12">
                        <button type="submit" class="btn-primary">Save</button>
                    </div>
                </div>

            </form>
        </section>

        <script>
            document.getElementById('addAddonButton').addEventListener('click', function () {
                const container = document.getElementById('serviceAddOns');
                const index = container.children.length; // Determine the new index based on existing children

                // Create the HTML for the new add-on inputs
                const addOnHTML = `
                    <div class="addon-input-group mb-4">
                    <!-- Add-on Name -->
                    <div class="form-row row mb-3">
                        <div class="col-lg-3 col-12">
                        <label class="form-label" for="addon-name-${index}">Name:</label>
                        </div>
                        <div class="col-lg-9 col-12">
                        <input type="text" class="form-control" id="addon-name-${index}" name="service_add_ons[${index}][name]" required>
                        </div>
                    </div>

                    <!-- Add-on Description -->
                    <div class="form-row row mb-3">
                        <div class="col-lg-3 col-12">
                        <label class="form-label" for="addon-description-${index}">Description:</label>
                        </div>
                        <div class="col-lg-9 col-12">
                        <input type="text" class="form-control" id="addon-description-${index}" name="service_add_ons[${index}][description]" required>
                        </div>
                    </div>

                    <!-- Add-on Price -->
                    <div class="form-row row mb-3">
                        <div class="col-lg-3 col-12">
                        <label class="form-label" for="addon-price-${index}">Price:</label>
                        </div>
                        <div class="col-lg-9 col-12">
                        <input type="number" step="0.01" class="form-control" id="addon-price-${index}" name="service_add_ons[${index}][price]" required>
                        </div>
                    </div>

                    <!-- Add-on Max Quantity -->
                    <div class="form-row row mb-3">
                        <div class="col-lg-3 col-12">
                        <label class="form-label" for="addon-max-quantity-${index}">Max quantity per session:</label>
                        </div>
                        <div class="col-lg-9 col-12">
                        <input type="text" step="0.01" class="form-control" id="addon-max-quantity-${index}" name="service_add_ons[${index}][max_quantity]" required>
                        </div>
                    </div>

                    <!-- Remove Button -->
                    <div class="form-row row mb-3">
                        <div class="col-12">
                        <button type="button" class="btn btn-danger remove-addon-button">Remove</button>
                        </div>
                    </div>
                    </div>
                    `;

                // Append the new add-on inputs to the container
                const div = document.createElement('div');
                div.innerHTML = addOnHTML;
                container.appendChild(div);
            });

            document.getElementById('serviceAddOns').addEventListener('click', function (event) {
                if (event.target && event.target.classList.contains('remove-addon-button')) {
                    // Remove the closest parent element of the clicked remove button
                    event.target.closest('.addon-input-group').remove();
                }
            });



            function toggleTimes(checkbox, collapseId) {
                const collapseElement = document.getElementById(collapseId);
                if (checkbox.checked) {
                    collapseElement.classList.add('show');
                } else {
                    collapseElement.classList.remove('show');
                }
            }

        </script>

        <%- include('../partials/footer') %>