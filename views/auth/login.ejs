<%- include('../partials/header') %>
  <% if (message && message.length > 0) { %>
  <div class="flash-messages-container animate__animated">
      <div class="flash-message"><iconify-icon icon="solar:info-circle-outline" inline class="brand-orange"></iconify-icon><%= message %></div>
  </div>
  <% } %>
    <section id="login-layout" class="container">
        <div class="row">
     
          <div class="col-12 text-center mb-2">
            <h2>Sign into EasyLeagues </h2>
            <p class="supporting-text">Login or create an account to make your predictions</p>
          </div>
          <div class="col-12 mb-3 d-flex justify-content-center">
            <a href="/register" class="font-14 brand no-styling fw-semibold">No account? sign up here</a>
          </div>
          <div class="col-12">
            <form action="/login" method="POST">
              <div class="col-12 mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" class="form-control" id="email" name="email" required>
              </div>
              <div class="col-12 mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" class="form-control" id="password" name="password">
              </div>
              <div class="col-12 mb-3 d-flex justify-content-end">
                <a href="/request-reset" class="font-14 brand no-styling fw-semibold">Forgot password</a>
              </div>
  
              <div class="col-12 mb-4">
                <button class="btn-primary w-100" type="submit">Sign in</button>
              </div>
              <div class="col-12 text-center">
                <!-- <p class="font-14">Don't have an account? <a href="/register">Sign up</a> -->
              </div>
            </form>
          </div>
        </div>
      </section>
      <script src="/js/functions.js"></script>
</html>