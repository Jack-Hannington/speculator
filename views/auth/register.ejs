<%- include('../partials/header') %>
<section class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;max-width: 840px;padding:30px;">
    <div class="row">
 
        <div class="col-lg-6 mb-4 mb-lg-0">

            <form action="/register" method="POST">
                <div class="col-12 mb-4">
                    <h2>EasyLeagues</h2>
                    <p class="font-14">Earn points for guessing the correct result and scoreline from real competitions. Create or join private mini-leagues to compete against friends. </p>
                </div>
                <div class="row mb-3">
                    <div class="col-12">
                        <h4>Sign up here</h4>
                        
                        <label class="form-label" for="first_name">First name</label>
                        <input class="form-control" type="text" id="first_name" name="first_name" required>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-12">
                        <label class="form-label" for="email">Email</label>
                        <input class="form-control" type="email" id="email" name="email" required>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-12">
                        <label class="form-label" for="password">Password</label>
                        <input class="form-control" type="password" id="password" name="password" required>
                    </div>
                </div>
                <input type="hidden" id="role" name="role" value="user">
                <div class="row">
                    <div class="col-12">
                        <button type="submit" class="btn btn-primary w-100">Register</button>
                    </div>
                    <div class="col-12 mt-3 d-flex justify-content-center">
                        <a href="/login" class="font-14 brand no-styling fw-semibold">Back to login</a>
                      </div>
                </div>
            </form>
        </div>
        <div class="col-lg-6 col-12 text-center align-items-center">
           
            <div class="shadow-lg ms-lg-4" style="border: 4px solid #ecf0f6; padding: 5px;background-color: #ecf0f6;border-radius: 6px;">
                <img style="max-width: 100%; width: 100%;" src="../predictions.png" alt="Registration Screenshot">
            </div>
            
        </div>
    </div>
</section>
<%- include('../partials/footer') %>
