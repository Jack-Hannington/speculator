<%- include('../partials/header') %>
<%- include('../partials/nav') %>

<% if (message && message.length > 0) { %>
  <div class="flash-messages-container animate__animated">
    <div class="flash-message">
      <iconify-icon icon="solar:info-circle-outline" inline class="brand-orange"></iconify-icon><%= message %>
    </div>
  </div>
<% } %>

<div class="container-xxl">
  <section>
    <div class="row">
      <div class="col-lg-9 col-12">
        <h4>Create League</h4>
      </div>
    </div>
  </section>

  <form action="/leagues/create" method="POST">
    <div class="form-row row mb-3">
      <div class="col-lg-3 col-12">
        <label class="form-label" for="name">League Name:</label>
      </div>
      <div class="col-lg-9 col-12">
        <input type="text" class="form-control" id="name" name="name" required>
      </div>
    </div>

    <div class="form-row row mb-3">
      <div class="col-lg-3 col-12">
        <label class="form-label" for="tournament_id">Tournament:</label>
      </div>
      <div class="col-lg-9 col-12">
        <select class="form-control" id="tournament_id" name="tournament_id" required>
          <% tournaments.forEach(tournament => { %>
            <option value="<%= tournament.id %>"><%= tournament.name %></option>
          <% }); %>
        </select>
      </div>
    </div>

    <button type="submit" class="btn btn-primary">Create League</button>
  </form>
</div>

<%- include('../partials/footer') %>
