<%- include('../partials/header') %>
<%- include('../partials/nav') %>
<div class="container-xxl px-xl-4 px-0">
    <section>
      <div class="row">
      <div class="col-lg-12 col-12">
        <h3>New assessment</h3>
      </div>
    </div>
    </section> 
    <form action="/customers/<%= customer.id %>/assessments/<%= assessmentId %>/submit" method="POST">
      <% assessmentQuestions.forEach(assessmentQuestion => { %>
        <div class="form-row row mb-3">
          <div class="col-lg-4 col-12 mb-lg-0 mb-2">
            <label class="form-label mb-0" for="question-<%= assessmentQuestion.question_id %>"><%= assessmentQuestion.questions.question %></label>
            <p class="support-text font-12 pe-lg-3 me-0"><%=assessmentQuestion.questions.detail %></p>
          </div>
          <div class="col-lg-8 col-12">
            <% if (assessmentQuestion.questions.question_type === 'text') { %>
              <input type="text" class="form-control" id="question-<%= assessmentQuestion.question_id %>" name="question-<%= assessmentQuestion.question_id %>" required />
            <% } else if (assessmentQuestion.questions.question_type === 'numeric') { %>
              <input type="number" class="form-control" id="question-<%= assessmentQuestion.question_id %>" name="question-<%= assessmentQuestion.question_id %>" required />
            <% } else if (assessmentQuestion.questions.question_type === 'date') { %>
              <input type="date" class="form-control" id="question-<%= assessmentQuestion.question_id %>" name="question-<%= assessmentQuestion.question_id %>" required />
            <% } else if (assessmentQuestion.questions.question_type === 'textarea') { %>
              <textarea class="form-control" id="question-<%= assessmentQuestion.question_id %>" name="question-<%= assessmentQuestion.question_id %>" rows="3" required></textarea>
            <% } else if (assessmentQuestion.questions.question_type === 'dropdown') { %>
              <select class="form-select" id="question-<%= assessmentQuestion.question_id %>" name="question-<%= assessmentQuestion.question_id %>" required>
                <% const options = JSON.parse(assessmentQuestion.questions.details).options; %>
                <% options.forEach(option => { %>
                  <option value="<%= option.value %>"><%= option.label %></option>
                <% }) %>
              </select>
            <% } %>
          </div>
        </div>
      <% }) %>
      <button type="submit" class="btn btn-primary">Submit Assessment</button>
    </form>
    
</div>
<%- include('../partials/footer') %>
