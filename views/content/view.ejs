<%- include('../partials/header') %>
<%- include('../partials/nav') %>

<div class="container-xxl px-xl-5 px-0">
  <section class="mt-3 mb-3">
    <div class="row">
      <div class="col-12">
        <h1><%= content.title %></h1>
        <div id="content-body">
          <!-- WordPress content will be loaded here -->
        </div>
      </div>
    </div>
  </section>
</div>

<script>
  async function fetchWordPressContent(postId) {
    const response = await fetch(`https://altiushealthcare.co.uk/wp-json/wp/v2/posts/${postId}`);
    const post = await response.json();

    const contentBody = document.getElementById('content-body');
    contentBody.innerHTML = post.content.rendered;

    // Optionally add classes dynamically
    // contentBody.classList.add('your-custom-class');
  }

  fetchWordPressContent('<%= content.wordpress_post_id %>');
</script>

